<div class="grid grid-cols-4 gap-4">
  <%= for driver <- @drivers do %>
    <div class="w-64 bg-indigo-900 px-2 py-1">
      <h2 class="text-white text-lg font-bold">
        <%= driver.name %>
      </h2>

      <h3 class="text-5xl text-white font-extrabold italic">
        <%= driver.number %>
      </h3>
    </div>
  <% end %>
</div>
